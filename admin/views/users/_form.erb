<% error = @user.errors.key?(:name) && @user.errors[:name].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :name, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :name, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:name) : "Internal identifier, must be unique" %></span>
  </div>
</fieldset>
<% error = @user.errors.key?(:display_name) && @user.errors[:display_name].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :display_name, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :display_name, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:display_name) : "Arbitrary name, ie. IP address" %></span>
  </div>
</fieldset>
<% error = @user.errors.key?(:auth_token) && @user.errors[:auth_token].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :auth_token, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :auth_token, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:auth_token) : "Authorization token" %></span>
  </div>
</fieldset>
<% error = @user.errors.key?(:email) && @user.errors[:email].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :email, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :email, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:email) : "Email address" %></span>
  </div>
</fieldset>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :spark_integration, :class => 'control-label' %>
  <div class='checkbox'>
    <label>
      <%= f.check_box :spark_integration, :class => 'input-xlarge' %>
      Enable Spark integration?
    </label>
  </div>
</fieldset>

<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:users, :index), :class => 'btn btn-default' %>
</div>