<% error = @reservation.errors.key?(:time) && @reservation.errors[:time].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :time, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :time, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:time) : "Ex: a simple text" %></span>
  </div>
</fieldset>
